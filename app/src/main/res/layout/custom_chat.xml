<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_gravity="right"
        android:id="@+id/relSender"
        android:visibility="gone"
        android:background="@drawable/bubble_out">

        <TextView
            android:id="@+id/message_userS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:textSize="10sp"
            android:gravity="right"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/message_textS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_userS"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_timeS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="10sp"
            android:layout_below="@id/message_textS"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="left"
        android:id="@+id/relReciever"
        android:visibility="gone"
        android:background="@drawable/bubble_in">

        <TextView
            android:id="@+id/message_userR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:textSize="10sp"
            android:gravity="left"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/message_textR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_userR"
            android:textColor="@android:color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_timeR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="10sp"
            android:layout_below="@id/message_textR"
            />
    </RelativeLayout>

</LinearLayout>