<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="@drawable/fd_back">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:text="Change password"
        android:id="@+id/tvHeading"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#aeaeae"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edt_enter_password"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:inputType="textPassword"
            android:hint="Enter password"
            android:singleLine="true"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:paddingRight="20dp"
            android:background="@drawable/edit_style"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edt_re_enter_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:singleLine="true"
            android:inputType="textPassword"
            android:hint="Enter password again"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@drawable/edit_style"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:background="@color/text_color_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toLeftOf="@+id/ve1"
            android:id="@+id/tv_pcancel"
            android:text="Cancel"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/ve1"
            android:background="@color/text_color_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ve1"
            android:gravity="center"
            android:id="@+id/tv_changepwd"
            android:textColor="@color/text_color_blue"
            android:text="Change"/>

    </RelativeLayout>


</LinearLayout>