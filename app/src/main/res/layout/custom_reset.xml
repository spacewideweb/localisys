<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="@drawable/fd_back">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textSize="16sp"
        android:padding="20dp"
        android:id="@+id/msg"
        android:text="Are you sure you want to reset\nall notification settings?" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"

        android:background="@color/text_color_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_toLeftOf="@+id/ve1"
            android:id="@+id/tv_recancel"
            android:text="Cancel"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/ve1"
            android:background="@color/text_color_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ve1"
            android:id="@+id/tv_reset"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="Reset"/>

    </RelativeLayout>

</LinearLayout>