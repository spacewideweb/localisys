<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/frameID">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report A Problem"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#000"
            android:id="@+id/tvTitle1"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="bottom"
            android:background="#b2b2b2"/>

    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="Select the reason for reporting this post."/>


    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:background="@drawable/edit_style_switch"
        android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/reason_options"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:textAllCaps="false"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_down_blue"/>

    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textCursorDrawable="@drawable/white_cursor"
        android:hint="Describe the reason"
        android:gravity="start"
        android:id="@+id/describe_problem"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/edit_style1"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/lin"
        android:background="@color/fade_blue"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/rel3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:id="@+id/reportcancel"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/v1"
            android:text="Cancel"/>

        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:id="@+id/v1"
            android:background="@color/text_color_blue"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v1"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:id="@+id/reportsubmit"
            android:text="Report"/>

    </RelativeLayout>

</LinearLayout>