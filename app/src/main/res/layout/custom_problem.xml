<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:background="@drawable/fd_back">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:text="Report a problem"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#aeaeae"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="Please, select the report category." />
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_style_switch"
        android:gravity="center"
        android:id="@+id/reason"
        android:layout_gravity="center"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:text="Select the reason"
            android:textColor="@color/text_color_blue"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_down_blue"/>
    </LinearLayout>

    <atpl.cc.localisys.classes.MultiLineText
        android:id="@+id/describe_problem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="top"
        android:hint="Describe the problem.."
        android:padding="8dp"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/edit_style1"
        android:layout_marginTop="10dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@color/text_color_blue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_toLeftOf="@+id/ve1"
            android:id="@+id/tv_rcancel"
            android:text="Cancel"/>
        <View
            android:layout_width="0.1dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:id="@+id/ve1"
            android:background="@color/text_color_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ve1"
            android:id="@+id/tv_report"
            android:gravity="center"
            android:text="Report"/>

    </RelativeLayout>

</LinearLayout>